<%= search_form_for @q, url: url, html: { class: "flex justify-center items-center bg-white rounded-full shadow-md" } do |f| %>
  <div data-controller="autocomplete" data-autocomplete-url-value="/search" role="combobox">
    <%= f.search_field :title_or_content_cont, data: { autocomplete_target: 'input' }, placeholder: 'Search', class: "w-full px-6 py-2 leading-tight text-gray-700 rounded-l-full focus:outline-none" %>
    <%= f.hidden_field :title, data: { autocomplete_target: 'hidden' } %>
  </div>
  <%= f.submit '検索', class: "px-6 py-2 text-gray bg-sky-300 rounded-r-full hover:bg-blue-600 focus:outline-none" %>
<% end %>
