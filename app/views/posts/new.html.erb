<div class="flex flex-col items-center justify-center bg-white py-64">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="font-bold text-4xl">短歌生成フォーム</h1>
    </div>
    <%= form_with model: @posts, url: select_posts_path, method: :post, data: { turbo: false }, class: "mt-8 space-y-6" do |f| %>
      <input type="hidden" name="remember" value="true">
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= f.label :title, class: "sr-only" %>
          <%= f.text_field :title, class: "appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", placeholder: "短歌にしたい文章を入力してください" %>
        </div>
      </div>
      <div>
        <%= f.submit "作成する", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-bold rounded-md text-white bg-pink-500 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>