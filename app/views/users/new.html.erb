<div class="flex flex-grow justify-center items-center">
  <div class="w-full max-w-4xl rounded-lg p-6">
    <h1 class="text-4xl text-white text-center mb-6">新規会員登録</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <!-- Left column -->
      <div class="border p-4 rounded-lg shadow-md">
        <h2 class="text-lg text-white font-bold mb-4 underline text-center">新規会員登録</h2>
        <%= form_with model: @user, method: :post, class: "space-y-4" do |f| %>
          <div>
            <%= f.label :name, "名前", class: "block text-white" %>
            <%= f.text_field :name, class: "w-full px-3 py-2 border rounded-lg", required: true %>
          </div>
          <div>
            <%= f.label :email, "メールアドレス", class: "block text-white" %>
            <%= f.email_field :email, class: "w-full px-3 py-2 border rounded-lg", required: true %>
          </div>
          <div>
            <%= f.label :password, "パスワード", class: "block text-white" %>
            <%= f.password_field :password, class: "w-full px-3 py-2 border rounded-lg", required: true %>
          </div>
          <div>
            <%= f.label :password_confirmation, "パスワード（確認用）", class: "block text-white" %>
            <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border rounded-lg", required: true %>
          </div>
          <div>
            <%= f.submit "登録する", class: "w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-700" %>
          </div>
        <% end %>
      </div>
      <!-- Right column -->
      <div class="border p-4 rounded-lg shadow-md">
        <h2 class="text-lg text-white font-bold mb-4 underline text-center">すでにアカウントをお持ちですか？</h2>
        <p class="mb-4 text-white">すでにアカウントをお持ちの場合は、こちらからログインしてください。</p>
        <%= link_to "ログイン", login_path, class: "block w-full text-center bg-gray-500 text-white py-2 rounded-lg hover:bg-gray-700" %>
      </div>
    </div>
  </div>
</div>
